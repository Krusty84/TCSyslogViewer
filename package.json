{
  "name": "tc-syslog-viewer",
  "displayName": "TC Syslog Viewer",
  "description": "Syntax color + Explorer for Teamcenter (Siemens Digital Industries Software) syslog files.",
  "version": "0.0.1",
  "publisher": "Alexey Sedoykin",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "type": "module",
  "main": "./src/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:tcSyslogViewer.refresh",
    "onCommand:tcSyslogViewer.copyCategory",
    "onCommand:tcSyslogViewer.copyEntry",
    "onCommand:tcSyslogViewer.addFavorite",
    "onCommand:tcSyslogViewer.editFavorite",
    "onCommand:tcSyslogViewer.removeFavorite",
    "onCommand:tcSyslogViewer.openFavorite",
    "onCommand:tcSyslogViewer.closeOccurrencesResult",
    "onCommand:tcSyslogViewer.findAllOccurrencesOpenInEditor",
    "onView:tcSyslogViewerBasic",
    "onView:tcSyslogViewerExtra",
    "onView:tcSyslogViewerFavorites",
    "workspaceContains:**/*.syslog",
    "onLanguage:teamcenter-syslog"
  ],
  "contributes": {
    "commands": [
      {
        "command": "tcSyslogViewer.refresh",
        "title": "TC Syslog Viewer: Refresh Sylog File"
      },
      {
        "command": "tcSyslogViewer.copyCategory",
        "title": "TC Syslog Viewer: Open Category"
      },
      {
        "command": "tcSyslogViewer.copyEntry",
        "title": "TC Syslog: Open Entry"
      },
      {
        "command": "tcSyslogViewer.addFavorite",
        "title": "TC Syslog Viewer: Add to Favorites"
      },
      {
        "command": "tcSyslogViewer.editFavorite",
        "title": "TC Syslog Viewer: Edit Favorite Comment"
      },
      {
        "command": "tcSyslogViewer.removeFavorite",
        "title": "TC Syslog Viewer: Remove Favorite"
      },
      {
        "command": "tcSyslogViewer.openFavorite",
        "title": "TC Syslog Viewer: Open Favorite Entry"
      },
      {
        "command": "tcSyslogViewer.closeOccurrencesResult",
        "title": "TC Syslog Viewer: Close Occurrences Result"
      },
      {
        "command": "tcSyslogViewer.findAllOccurrences",
        "title": "TC Syslog Viewer: Find All Occurrences"
      },
      {
        "command": "tcSyslogViewer.findAllOccurrencesOpenInEditor",
        "title": "TC Syslog Viewer: Find All Occurrences Open in Editor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tcSyslogViewerSidebar",
          "title": "Teamcenter Syslog Viewer",
          "icon": "media/icon.svg"
        }
      ],
      "panel": [
        {
          "id": "tcSyslogViewerPanel",
          "title": "Teamcenter Syslog Viewer",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "tcSyslogViewerSidebar": [
        {
          "id": "tcSyslogViewerBasic",
          "name": "Basic Content"
        },
        {
          "id": "tcSyslogViewerExtra",
          "name": "Extra Content"
        },
        {
          "id": "tcSyslogViewerFavorites",
          "name": "Favorites"
        }
      ],
      "tcSyslogViewerPanel": [
        {
          "id": "tcSyslogViewerOccurrences",
          "name": "Occurrences"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "tcSyslogViewer.refresh",
          "when": "true"
        },
        {
          "command": "tcSyslogViewer.copyCategory",
          "when": "true"
        },
        {
          "command": "tcSyslogViewer.copyEntry",
          "when": "true"
        },
        {
          "command": "tcSyslogViewer.addFavorite",
          "when": "true"
        },
        {
          "command": "tcSyslogViewer.editFavorite",
          "when": "false"
        },
        {
          "command": "tcSyslogViewer.removeFavorite",
          "when": "false"
        },
        {
          "command": "tcSyslogViewer.findAllOccurrences",
          "when": "true"
        },
        {
          "command": "tcSyslogViewer.findAllOccurrencesOpenInEditor",
          "when": "true"
        },
        {
          "command": "tcSyslogViewer.closeOccurrencesResult",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "tcSyslogViewer.copyCategory",
          "when": "view == tcSyslogViewerBasic && viewItem == syslogCategory"
        },
        {
          "command": "tcSyslogViewer.copyCategory",
          "when": "view == tcSyslogViewerExtra && viewItem == syslogCategory"
        },
        {
          "command": "tcSyslogViewer.copyCategory",
          "when": "view == tcSyslogViewerBasic && viewItem == syslogGroup"
        },
        {
          "command": "tcSyslogViewer.copyCategory",
          "when": "view == tcSyslogViewerExtra && viewItem == syslogGroup"
        },
        {
          "command": "tcSyslogViewer.closeOccurrencesResult",
          "when": "view == tcSyslogViewerOccurrences && viewItem == syslogOccurrencesResult"
        },
        {
          "command": "tcSyslogViewer.copyEntry",
          "when": "view == tcSyslogViewerBasic && viewItem == syslogEntry"
        },
        {
          "command": "tcSyslogViewer.copyEntry",
          "when": "view == tcSyslogViewerExtra && viewItem == syslogEntry"
        },
        {
          "command": "tcSyslogViewer.addFavorite",
          "when": "view == tcSyslogViewerBasic && viewItem == syslogEntry"
        },
        {
          "command": "tcSyslogViewer.addFavorite",
          "when": "view == tcSyslogViewerExtra && viewItem == syslogEntry"
        },
        {
          "command": "tcSyslogViewer.editFavorite",
          "when": "view == tcSyslogViewerFavorites && viewItem == syslogFavorite"
        },
        {
          "command": "tcSyslogViewer.removeFavorite",
          "when": "view == tcSyslogViewerFavorites && viewItem == syslogFavorite"
        }
      ],
      "editor/context": [
        {
          "command": "tcSyslogViewer.addFavorite",
          "when": "resourceLangId == teamcenter-syslog"
        },
        {
          "command": "tcSyslogViewer.findAllOccurrences",
          "when": "resourceLangId == teamcenter-syslog"
        },
        {
          "command": "tcSyslogViewer.findAllOccurrencesOpenInEditor",
          "when": "resourceLangId == teamcenter-syslog"
        }
      ]
    },
    "configuration": {
      "properties": {
        "tcSyslogViewer.colors.level.WARNING.fg": {
          "type": "color-hex",
          "default": "#b27000",
          "description": "Log Level WARNING foreground color"
        },
        "tcSyslogViewer.colors.level.WARNING.bg": {
          "type": "color-hex",
          "default": "#b2700022",
          "description": "Log Level WARNING background color"
        },
        "tcSyslogViewer.colors.level.DEBUG.fg": {
          "type": "color-hex",
          "default": "#5c6770",
          "description": "Log Level DEBUG foreground color"
        },
        "tcSyslogViewer.colors.level.DEBUG.bg": {
          "type": "color--hex",
          "default": "#5c677022",
          "description": "Log Level DEBUG background color"
        },
        "tcSyslogViewer.colors.level.FATAL.fg": {
          "type": "color-hex",
          "default": "#c21850",
          "description": "Log Level FATAL foreground color"
        },
        "tcSyslogViewer.colors.level.FATAL.bg": {
          "type": "color-hex",
          "default": "#c2185022",
          "description": "Log Level FATAL background color"
        },
        "tcSyslogViewer.colors.timestamp.fg": {
          "type": "color-hex",
          "default": "#7f868e",
          "description": "Timestamp foreground color"
        },
        "tcSyslogViewer.colors.sql.background": {
          "type": "color-hex",
          "default": "#f1e8d1cc",
          "description": "SQL dump background color"
        },
        "tcSyslogViewer.colors.sql.inline.background": {
          "type": "color-hex",
          "default": "#f1e8d1cc",
          "description": "Inline SQL background color"
        },
        "tcSyslogViewer.colors.journal.background": {
          "type": "color-hex",
          "default": "#dceeffcc",
          "description": "Journal sections background color"
        },
        "tcSyslogViewer.colors.journal.hierarchy.background": {
          "type": "color-hex",
          "default": "#dceeff99",
          "description": "Hierarchy trace background color"
        },
        "tcSyslogViewer.colors.access.background": {
          "type": "color-hex",
          "default": "#c4e4ffcc",
          "description": "Access privilege check background color"
        },
        "tcSyslogViewer.colors.workflow.background": {
          "type": "color-hex",
          "default": "#d0e8ffcc",
          "description": "Workflow handler flow background color"
        }
      }
    },
    "languages": [
      {
        "id": "teamcenter-syslog",
        "aliases": [
          "Teamcenter Syslog",
          "teamcenter syslog"
        ],
        "extensions": [
          ".syslog"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "teamcenter-syslog",
        "scopeName": "source.teamcenter.syslog",
        "path": "./syntaxes/teamcenter.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile:antlr": "antlr -Dlanguage=JavaScript -visitor -Xexact-output-dir -o src/parse/antlr/generated src/parse/antlr/tcServerSyslogGrammar.g4",
    "watch": "node --watch src/extension.js"
  },
  "dependencies": {
    "antlr4": "^4.13.1"
  }
}
