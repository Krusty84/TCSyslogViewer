{
  "name": "tc-syslog-viewer",
  "displayName": "TC Syslog Viewer",
  "description": "Syntax color + Explorer + counters for Siemens Teamcenter syslog files.",
  "version": "0.0.1",
  "publisher": "AlexeySedoykin",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "type": "module",
  "main": "./src/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:tcSyslog.refresh",
    "onCommand:tcSyslog.copyCategory",
    "onCommand:tcSyslog.copyEntry",
    "onCommand:tcSyslog.addFavorite",
    "onCommand:tcSyslog.editFavorite",
    "onCommand:tcSyslog.removeFavorite",
    "onCommand:tcSyslog.openFavorite",
    "onCommand:tcSyslog.closeMentionsSession",
    "onCommand:tcSyslog.findAllMentionsInEditor",
    "onView:tcSyslogBasic",
    "onView:tcSyslogExtra",
    "onView:tcSyslogFavorites",
    "workspaceContains:**/*.syslog",
    "onLanguage:teamcenter-syslog"
  ],
  "contributes": {
    "commands": [
      {
        "command": "tcSyslog.refresh",
        "title": "TC Syslog: Refresh"
      },
      {
        "command": "tcSyslog.copyCategory",
        "title": "TC Syslog: Copy Category"
      },
      {
        "command": "tcSyslog.copyEntry",
        "title": "TC Syslog: Copy Entry"
      },
      {
        "command": "tcSyslog.addFavorite",
        "title": "TC Syslog: Add to Favorites"
      },
      {
        "command": "tcSyslog.editFavorite",
        "title": "TC Syslog: Edit Favorite Comment"
      },
      {
        "command": "tcSyslog.removeFavorite",
        "title": "TC Syslog: Remove Favorite"
      },
      {
        "command": "tcSyslog.openFavorite",
        "title": "TC Syslog: Open Favorite Entry"
      },
      {
        "command": "tcSyslog.closeMentionsSession",
        "title": "TC Syslog: Close Mentions Result"
      },
      {
        "command": "tcSyslog.findAllMentions",
        "title": "TC Syslog: Find All Mentions"
      },
      {
        "command": "tcSyslog.findAllMentionsInEditor",
        "title": "TC Syslog: Find Mentions in Editor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tcSyslogSidebar",
          "title": "Teamcenter Syslog",
          "icon": "media/icon.svg"
        }
      ],
      "panel": [
        {
          "id": "tcSyslogPanel",
          "title": "Teamcenter Syslog",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "tcSyslogSidebar": [
        {
          "id": "tcSyslogBasic",
          "name": "Basic Content"
        },
        {
          "id": "tcSyslogExtra",
          "name": "Extra Content"
        },
        {
          "id": "tcSyslogFavorites",
          "name": "Favorites"
        }
      ],
      "tcSyslogPanel": [
        {
          "id": "tcSyslogMentions",
          "name": "Mentions"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "tcSyslog.refresh",
          "when": "true"
        },
        {
          "command": "tcSyslog.copyCategory",
          "when": "true"
        },
        {
          "command": "tcSyslog.copyEntry",
          "when": "true"
        },
        {
          "command": "tcSyslog.addFavorite",
          "when": "true"
        },
        {
          "command": "tcSyslog.editFavorite",
          "when": "false"
        },
        {
          "command": "tcSyslog.removeFavorite",
          "when": "false"
        },
        {
          "command": "tcSyslog.findAllMentions",
          "when": "true"
        },
        {
          "command": "tcSyslog.findAllMentionsInEditor",
          "when": "true"
        },
        {
          "command": "tcSyslog.closeMentionsSession",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "tcSyslog.copyCategory",
          "when": "view == tcSyslogBasic && viewItem == syslogCategory"
        },
        {
          "command": "tcSyslog.copyCategory",
          "when": "view == tcSyslogExtra && viewItem == syslogCategory"
        },
        {
          "command": "tcSyslog.copyCategory",
          "when": "view == tcSyslogBasic && viewItem == syslogGroup"
        },
        {
          "command": "tcSyslog.copyCategory",
          "when": "view == tcSyslogExtra && viewItem == syslogGroup"
        },
        {
          "command": "tcSyslog.closeMentionsSession",
          "when": "view == tcSyslogMentions && viewItem == syslogMentionsSession"
        },
        {
          "command": "tcSyslog.copyEntry",
          "when": "view == tcSyslogBasic && viewItem == syslogEntry"
        },
        {
          "command": "tcSyslog.copyEntry",
          "when": "view == tcSyslogExtra && viewItem == syslogEntry"
        },
        {
          "command": "tcSyslog.addFavorite",
          "when": "view == tcSyslogBasic && viewItem == syslogEntry"
        },
        {
          "command": "tcSyslog.addFavorite",
          "when": "view == tcSyslogExtra && viewItem == syslogEntry"
        },
        {
          "command": "tcSyslog.editFavorite",
          "when": "view == tcSyslogFavorites && viewItem == syslogFavorite"
        },
        {
          "command": "tcSyslog.removeFavorite",
          "when": "view == tcSyslogFavorites && viewItem == syslogFavorite"
        }
      ],
      "editor/context": [
        {
          "command": "tcSyslog.addFavorite",
          "when": "resourceLangId == teamcenter-syslog"
        },
        {
          "command": "tcSyslog.findAllMentions",
          "when": "resourceLangId == teamcenter-syslog"
        },
        {
          "command": "tcSyslog.findAllMentionsInEditor",
          "when": "resourceLangId == teamcenter-syslog"
        }
      ]
    },
    "configuration": {
      "properties": {
        "tcSyslog.colors.level.WARNING.fg": {
          "type": "color-hex",
          "default": "#b27000",
          "description": "Log Level WARNING foreground color"
        },
        "tcSyslog.colors.level.WARNING.bg": {
          "type": "color-hex",
          "default": "#b2700022",
          "description": "Log Level WARNING background color"
        },
        "tcSyslog.colors.level.DEBUG.fg": {
          "type": "color-hex",
          "default": "#5c6770",
          "description": "Log Level DEBUG foreground color"
        },
        "tcSyslog.colors.level.DEBUG.bg": {
          "type": "color--hex",
          "default": "#5c677022",
          "description": "Log Level DEBUG background color"
        },
        "tcSyslog.colors.level.FATAL.fg": {
          "type": "color-hex",
          "default": "#c21850",
          "description": "Log Level FATAL foreground color"
        },
        "tcSyslog.colors.level.FATAL.bg": {
          "type": "color-hex",
          "default": "#c2185022",
          "description": "Log Level FATAL background color"
        },
        "tcSyslog.colors.timestamp.fg": {
          "type": "color-hex",
          "default": "#7f868e",
          "description": "Timestamp foreground color"
        },
        "tcSyslog.colors.sql.background": {
          "type": "color-hex",
          "default": "#f1e8d1cc",
          "description": "SQL dump background color"
        },
        "tcSyslog.colors.sql.inline.background": {
          "type": "color-hex",
          "default": "#f1e8d1cc",
          "description": "Inline SQL background color"
        },
        "tcSyslog.colors.journal.background": {
          "type": "color-hex",
          "default": "#dceeffcc",
          "description": "Journal sections background color"
        },
        "tcSyslog.colors.journal.hierarchy.background": {
          "type": "color-hex",
          "default": "#dceeff99",
          "description": "Hierarchy trace background color"
        },
        "tcSyslog.colors.access.background": {
          "type": "color-hex",
          "default": "#c4e4ffcc",
          "description": "Access privilege check background color"
        },
        "tcSyslog.colors.workflow.background": {
          "type": "color-hex",
          "default": "#d0e8ffcc",
          "description": "Workflow handler flow background color"
        }
      }
    },
    "languages": [
      {
        "id": "teamcenter-syslog",
        "aliases": [
          "Teamcenter Syslog",
          "teamcenter syslog"
        ],
        "extensions": [
          ".syslog"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "teamcenter-syslog",
        "scopeName": "source.teamcenter.syslog",
        "path": "./syntaxes/teamcenter.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile:antlr": "antlr -Dlanguage=JavaScript -visitor -Xexact-output-dir -o src/parse/antlr/generated src/parse/antlr/TeamcenterLog.g4",
    "watch": "node --watch src/extension.js"
  },
  "dependencies": {
    "antlr4": "^4.13.1"
  }
}
