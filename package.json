{
  "name": "tc-syslog-viewer",
  "displayName": "TC Syslog Viewer",
  "description": "Syntax color + Explorer + counters for Siemens Teamcenter syslog files.",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "type": "module",
  "main": "./src/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:tcSyslog.refresh",
    "onCommand:tcSyslog.copyCategory",
    "onCommand:tcSyslog.copyEntry",
    "onCommand:tcSyslog.openThemePanel",
    "onView:tcSyslog.explorer",
    "workspaceContains:**/*.syslog",
    "onLanguage:teamcenter-syslog"
  ],
  "contributes": {
    "commands": [
      {
        "command": "tcSyslog.refresh",
        "title": "TC Syslog: Refresh"
      },
      {
        "command": "tcSyslog.copyCategory",
        "title": "TC Syslog: Copy Category"
      },
      {
        "command": "tcSyslog.copyEntry",
        "title": "TC Syslog: Copy Entry"
      },
      {
        "command": "tcSyslog.openThemePanel",
        "title": "TC Syslog: Colors & Fonts"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "tcSyslog.explorer",
          "name": "TC Syslog"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "tcSyslog.refresh",
          "when": "true"
        },
        {
          "command": "tcSyslog.copyCategory",
          "when": "true"
        },
        {
          "command": "tcSyslog.copyEntry",
          "when": "true"
        },
        {
          "command": "tcSyslog.openThemePanel",
          "when": "true"
        }
      ],
      "view/item/context": [
        {
          "command": "tcSyslog.copyCategory",
          "when": "view == tcSyslog.explorer && viewItem == syslogCategory"
        },
        {
          "command": "tcSyslog.copyCategory",
          "when": "view == tcSyslog.explorer && viewItem == syslogGroup"
        },
        {
          "command": "tcSyslog.copyEntry",
          "when": "view == tcSyslog.explorer && viewItem == syslogEntry"
        }
      ]
    },
    "configuration": {
      "title": "TC Syslog Viewer",
      "properties": {
        "tcSyslog.colors.level.INFO.fg": {
          "type": "string",
          "default": "#1479ff",
          "description": "INFO text color"
        },
        "tcSyslog.colors.level.WARNING.fg": {
          "type": "string",
          "default": "#b8860b",
          "description": "WARNING text color"
        },
        "tcSyslog.colors.level.ERROR.fg": {
          "type": "string",
          "default": "#ff4242",
          "description": "ERROR text color"
        },
        "tcSyslog.colors.level.NOTE.fg": {
          "type": "string",
          "default": "#3aa669",
          "description": "NOTE text color"
        },
        "tcSyslog.colors.level.DEBUG.fg": {
          "type": "string",
          "default": "#888888",
          "description": "DEBUG text color"
        },
        "tcSyslog.colors.level.FATAL.fg": {
          "type": "string",
          "default": "#ff00aa",
          "description": "FATAL text color"
        },
        "tcSyslog.font.family": {
          "type": "string",
          "default": "monospace",
          "description": "Font family for entry preview"
        },
        "tcSyslog.font.size": {
          "type": "number",
          "default": 12,
          "description": "Font size (px) for entry preview"
        },
        "tcSyslog.colors.timestamp.fg": {
          "type": "string",
          "default": "#9aa0a6",
          "description": "Timestamp text color"
        },
        "tcSyslog.colors.id.fg": {
          "type": "string",
          "default": "#c586c0",
          "description": "Identifier text color"
        },
        "tcSyslog.colors.message.fg": {
          "type": "string",
          "default": "#d4d4d4",
          "description": "Message text color"
        },
        "tcSyslog.colors.sql.background": {
          "type": "string",
          "default": "#f8f53b7f",
          "description": "SQL dump background color"
        },
        "tcSyslog.colors.sql.inline.background": {
          "type": "string",
          "default": "#f8f53b7f",
          "description": "Inline SQL background color"
        },
        "tcSyslog.colors.journal.background": {
          "type": "string",
          "default": "#f8f53b7f",
          "description": "Journalling section background color"
        },
        "tcSyslog.limits.logLevelEntries": {
          "type": "integer",
          "default": 200,
          "minimum": 1,
          "description": "Maximum log entries per level shown under the Log Levels category."
        },
        "tcSyslog.limits.sqlRowsPerDump": {
          "type": "integer",
          "default": 200,
          "minimum": 1,
          "description": "Maximum rows per SQL profile dump shown in the explorer."
        },
        "tcSyslog.limits.journalRowsPerSection": {
          "type": "integer",
          "default": 50,
          "minimum": 1,
          "description": "Maximum journaled function rows displayed per journal section."
        },
        "tcSyslog.limits.inlineSqlEntries": {
          "type": "integer",
          "default": 200,
          "minimum": 1,
          "description": "Maximum inline SQL entries listed in the explorer."
        }
      }
    },
    "languages": [
      {
        "id": "teamcenter-syslog",
        "aliases": [
          "Teamcenter Syslog",
          "teamcenter syslog"
        ],
        "extensions": [
          ".syslog"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "teamcenter-syslog",
        "scopeName": "source.teamcenter.syslog",
        "path": "./syntaxes/teamcenter.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile:antlr": "antlr -Dlanguage=JavaScript -visitor -Xexact-output-dir -o src/parse/antlr/generated src/parse/antlr/TeamcenterLog.g4",
    "watch": "node --watch src/extension.js"
  },
  "dependencies": {
    "antlr4": "^4.13.1"
  }
}
