{
  "name": "tc-syslog-viewer",
  "displayName": "TC Syslog Viewer",
  "description": "Syntax color + Explorer for Teamcenter (Siemens Digital Industries Software) syslog files.",
  "version": "1.2.2",
  "publisher": "AlexeySedoykin",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Debuggers",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "Teamcenter",
    "TC",
    "syslog",
    "tcserver",
    "analysis",
    "PLM",
    "Siemens",
    "Siemens Digital Industries Software"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Krusty84/TCSyslogViewer.git"
  },
  "type": "module",
  "main": "./src/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:tcSyslogViewer.refresh",
    "onCommand:tcSyslogViewer.openCategory",
    "onCommand:tcSyslogViewer.openEntry",
    "onCommand:tcSyslogViewer.addFavorite",
    "onCommand:tcSyslogViewer.editFavorite",
    "onCommand:tcSyslogViewer.removeFavorite",
    "onCommand:tcSyslogViewer.openFavorite",
    "onCommand:tcSyslogViewer.openSyslogFile",
    "onCommand:tcSyslogViewer.chatWithAi",
    "onCommand:tcSyslogViewer.closeOccurrencesResult",
    "onCommand:tcSyslogViewer.findAllOccurrencesOpenInEditor",
    "onView:tcSyslogViewerBasic",
    "onView:tcSyslogViewerExtra",
    "onView:tcSyslogViewerFavorites",
    "workspaceContains:**/*.syslog",
    "onLanguage:teamcenter-syslog"
  ],
  "contributes": {
    "commands": [
      {
        "command": "tcSyslogViewer.refresh",
        "title": "TC Syslog Viewer: Refresh Sylog File"
      },
      {
        "command": "tcSyslogViewer.openCategory",
        "title": "TC Syslog Viewer: Open Category"
      },
      {
        "command": "tcSyslogViewer.openEntry",
        "title": "TC Syslog: Open Entry"
      },
      {
        "command": "tcSyslogViewer.addFavorite",
        "title": "TC Syslog Viewer: Add to Favorites"
      },
      {
        "command": "tcSyslogViewer.editFavorite",
        "title": "TC Syslog Viewer: Edit Favorite Comment"
      },
      {
        "command": "tcSyslogViewer.removeFavorite",
        "title": "TC Syslog Viewer: Remove Favorite"
      },
      {
        "command": "tcSyslogViewer.openFavorite",
        "title": "TC Syslog Viewer: Open Favorite Entry"
      },
      {
        "command": "tcSyslogViewer.openSyslogFile",
        "title": "TC Syslog Viewer: Open Syslog File"
      },
      {
        "command": "tcSyslogViewer.chatWithAi",
        "title": "TC Syslog Viewer: Chat w/ AI"
      },
      {
        "command": "tcSyslogViewer.closeOccurrencesResult",
        "title": "TC Syslog Viewer: Close Occurrences Result"
      },
      {
        "command": "tcSyslogViewer.findAllOccurrences",
        "title": "TC Syslog Viewer: Find All Occurrences"
      },
      {
        "command": "tcSyslogViewer.findAllOccurrencesOpenInEditor",
        "title": "TC Syslog Viewer: Find All Occurrences Open in Editor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tcSyslogViewerRightSidebar",
          "title": "Teamcenter Syslog Viewer",
          "icon": "media/icon.svg"
        }
      ],
      "panel": [
        {
          "id": "tcSyslogViewerCenterBottomPanel",
          "title": "Teamcenter Syslog Viewer",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "tcSyslogViewerRightSidebar": [
        {
          "id": "tcSyslogViewerBasic",
          "name": "Basic Content"
        },
        {
          "id": "tcSyslogViewerExtra",
          "name": "Extra Content"
        },
        {
          "id": "tcSyslogViewerFavorites",
          "name": "Favorites"
        }
      ],
      "tcSyslogViewerCenterBottomPanel": [
        {
          "id": "tcSyslogViewerOccurrences",
          "name": "Occurrences"
        },
        {
          "id": "tcSyslogViewerAiInsights",
          "name": "AI Chat",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "tcSyslogViewer.refresh",
          "when": "true"
        },
        {
          "command": "tcSyslogViewer.openCategory",
          "when": "true"
        },
        {
          "command": "tcSyslogViewer.openEntry",
          "when": "true"
        },
        {
          "command": "tcSyslogViewer.addFavorite",
          "when": "true"
        },
        {
          "command": "tcSyslogViewer.openSyslogFile",
          "when": "true"
        },
        {
          "command": "tcSyslogViewer.chatWithAi",
          "when": "resourceLangId == teamcenter-syslog"
        },
        {
          "command": "tcSyslogViewer.editFavorite",
          "when": "false"
        },
        {
          "command": "tcSyslogViewer.removeFavorite",
          "when": "false"
        },
        {
          "command": "tcSyslogViewer.findAllOccurrences",
          "when": "true"
        },
        {
          "command": "tcSyslogViewer.findAllOccurrencesOpenInEditor",
          "when": "true"
        },
        {
          "command": "tcSyslogViewer.closeOccurrencesResult",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "tcSyslogViewer.openCategory",
          "when": "view == tcSyslogViewerBasic && viewItem == syslogCategory"
        },
        {
          "command": "tcSyslogViewer.openCategory",
          "when": "view == tcSyslogViewerExtra && viewItem == syslogCategory"
        },
        {
          "command": "tcSyslogViewer.openCategory",
          "when": "view == tcSyslogViewerBasic && viewItem == syslogGroup"
        },
        {
          "command": "tcSyslogViewer.openCategory",
          "when": "view == tcSyslogViewerExtra && viewItem == syslogGroup"
        },
        {
          "command": "tcSyslogViewer.closeOccurrencesResult",
          "when": "view == tcSyslogViewerOccurrences && viewItem == syslogOccurrencesResult"
        },
        {
          "command": "tcSyslogViewer.openEntry",
          "when": "view == tcSyslogViewerBasic && viewItem == syslogEntry"
        },
        {
          "command": "tcSyslogViewer.openEntry",
          "when": "view == tcSyslogViewerExtra && viewItem == syslogEntry"
        },
        {
          "command": "tcSyslogViewer.addFavorite",
          "when": "view == tcSyslogViewerBasic && viewItem == syslogEntry"
        },
        {
          "command": "tcSyslogViewer.addFavorite",
          "when": "view == tcSyslogViewerExtra && viewItem == syslogEntry"
        },
        {
          "command": "tcSyslogViewer.editFavorite",
          "when": "view == tcSyslogViewerFavorites && viewItem == syslogFavorite"
        },
        {
          "command": "tcSyslogViewer.removeFavorite",
          "when": "view == tcSyslogViewerFavorites && viewItem == syslogFavorite"
        }
      ],
      "editor/context": [
        {
          "command": "tcSyslogViewer.addFavorite",
          "when": "resourceLangId == teamcenter-syslog"
        },
        {
          "command": "tcSyslogViewer.findAllOccurrences",
          "when": "resourceLangId == teamcenter-syslog"
        },
        {
          "command": "tcSyslogViewer.findAllOccurrencesOpenInEditor",
          "when": "resourceLangId == teamcenter-syslog"
        },
        {
          "command": "tcSyslogViewer.chatWithAi",
          "when": "resourceLangId == teamcenter-syslog"
        }
      ]
    },
    "configuration": {
      "properties": {
        "tcSyslogViewer.colors.level.WARNING.fg": {
          "type": "color-hex",
          "default": {
            "light": "#b27000",
            "dark": "#ffb74d"
          },
          "description": "Log Level WARNING foreground color"
        },
        "tcSyslogViewer.colors.level.WARNING.bg": {
          "type": "color-hex",
          "default": {
            "light": "#b2700022",
            "dark": "#ffb74d33"
          },
          "description": "Log Level WARNING background color"
        },
        "tcSyslogViewer.colors.level.WARN.fg": {
          "type": "color-hex",
          "default": {
            "light": "#b8860b",
            "dark": "#ffb300"
          },
          "description": "Log Level WARN foreground color"
        },
        "tcSyslogViewer.colors.level.WARN.bg": {
          "type": "color-hex",
          "default": {
            "light": "#b8860b22",
            "dark": "#ffb3001a"
          },
          "description": "Log Level WARN background color"
        },
        "tcSyslogViewer.colors.level.ERROR.fg": {
          "type": "color-hex",
          "default": {
            "light": "#ff4242",
            "dark": "#ff5252"
          },
          "description": "Log Level ERROR foreground color"
        },
        "tcSyslogViewer.colors.level.ERROR.bg": {
          "type": "color-hex",
          "default": {
            "light": "#ff424222",
            "dark": "#ff52521a"
          },
          "description": "Log Level ERROR background color"
        },
        "tcSyslogViewer.colors.level.NOTE.fg": {
          "type": "color-hex",
          "default": {
            "light": "#3aa669",
            "dark": "#4caf50"
          },
          "description": "Log Level NOTE foreground color"
        },
        "tcSyslogViewer.colors.level.NOTE.bg": {
          "type": "color-hex",
          "default": {
            "light": "#3aa66922",
            "dark": "#4caf501a"
          },
          "description": "Log Level NOTE background color"
        },
        "tcSyslogViewer.colors.level.INFO.fg": {
          "type": "color-hex",
          "default": {
            "light": "#1479ff",
            "dark": "#64b5f6"
          },
          "description": "Log Level INFO foreground color"
        },
        "tcSyslogViewer.colors.level.INFO.bg": {
          "type": "color-hex",
          "default": {
            "light": "#1479ff22",
            "dark": "#64b5f61a"
          },
          "description": "Log Level INFO background color"
        },
        "tcSyslogViewer.colors.level.DEBUG.fg": {
          "type": "color-hex",
          "default": {
            "light": "#5c6770",
            "dark": "#90a4ae"
          },
          "description": "Log Level DEBUG foreground color"
        },
        "tcSyslogViewer.colors.level.DEBUG.bg": {
          "type": "color-hex",
          "default": {
            "light": "#5c677022",
            "dark": "#90a4ae1a"
          },
          "description": "Log Level DEBUG background color"
        },
        "tcSyslogViewer.colors.level.FATAL.fg": {
          "type": "color-hex",
          "default": {
            "light": "#c21850",
            "dark": "#ff1744"
          },
          "description": "Log Level FATAL foreground color"
        },
        "tcSyslogViewer.colors.level.FATAL.bg": {
          "type": "color-hex",
          "default": {
            "light": "#c2185022",
            "dark": "#ff17441a"
          },
          "description": "Log Level FATAL background color"
        },
        "tcSyslogViewer.colors.timestamp.fg": {
          "type": "color-hex",
          "default": {
            "light": "#7f868e",
            "dark": "#eceff1"
          },
          "description": "Timestamp foreground color"
        },
        "tcSyslogViewer.colors.sql.background": {
          "type": "color-hex",
          "default": {
            "light": "#f1e8d1cc",
            "dark": "#3c2f2fcc"
          },
          "description": "SQL dump background color"
        },
        "tcSyslogViewer.colors.sql.inline.background": {
          "type": "color-hex",
          "default": {
            "light": "#f1e8d1cc",
            "dark": "#3c2f2f99"
          },
          "description": "Inline SQL background color"
        },
        "tcSyslogViewer.colors.journal.background": {
          "type": "color-hex",
          "default": {
            "light": "#dceeffcc",
            "dark": "#263238cc"
          },
          "description": "Journal sections background color"
        },
        "tcSyslogViewer.colors.journal.hierarchy.background": {
          "type": "color-hex",
          "default": {
            "light": "#dceeff99",
            "dark": "#26323899"
          },
          "description": "Hierarchy trace background color"
        },
        "tcSyslogViewer.colors.access.background": {
          "type": "color-hex",
          "default": {
            "light": "#c4e4ffcc",
            "dark": "#1e3a5f99"
          },
          "description": "Access privilege check background color"
        },
        "tcSyslogViewer.colors.workflow.background": {
          "type": "color-hex",
          "default": {
            "light": "#d0e8ffcc",
            "dark": "#1a497199"
          },
          "description": "Workflow handler flow background color"
        },
        "tcSyslogViewer.ai.provider": {
          "type": "string",
          "enum": [
            "deepseek",
            "openai",
            "ollama"
          ],
          "default": "deepseek",
          "description": "LLM provider used by the AI analysis view (mirrors config.json provider)."
        },
        "tcSyslogViewer.ai.model": {
          "type": "string",
          "default": "deepseek-chat",
          "description": "Model identifier passed to the configured provider."
        },
        "tcSyslogViewer.ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the selected provider (stored in settings, consider using Secret Storage)."
        },
        "tcSyslogViewer.ai.workspace": {
          "type": "string",
          "default": "${workspaceFolder}",
          "description": "Logical workspace root used by the AI tools."
        },
        "tcSyslogViewer.colors.id.fg": {
          "type": "color-hex",
          "default": {
            "light": "#c586c0",
            "dark": "#f48fb1"
          },
          "description": "Identifier foreground color"
        },
        "tcSyslogViewer.colors.message.fg": {
          "type": "color-hex",
          "default": {
            "light": "#262627",
            "dark": "#f5f5f5"
          },
          "description": "Message foreground color"
        }
      }
    },
    "languages": [
      {
        "id": "teamcenter-syslog",
        "aliases": [
          "Teamcenter Syslog",
          "teamcenter syslog"
        ],
        "extensions": [
          ".syslog"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "teamcenter-syslog",
        "scopeName": "source.teamcenter.syslog",
        "path": "./syntaxes/teamcenter.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile:antlr": "antlr -Dlanguage=JavaScript -visitor -Xexact-output-dir -o src/parse/antlr/generated src/parse/antlr/tcServerSyslogGrammar.g4",
    "watch": "node --watch src/extension.js"
  },
  "dependencies": {
    "antlr4": "^4.13.1"
  }
}
